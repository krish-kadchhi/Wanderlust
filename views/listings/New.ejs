<%  layout("/layouts/boilerplate")  %>

    <div class="row mt-3">
        <div class="col-8 offset-2"> 
            <h3><b>Create New Listing</b></h3>
    <form method="POST" action="/listings" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control" id="title" required/>
            <div class="valid-feedback">Title looks good!</div>
        </div>
        
        <div>
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control" id="description" required></textarea>
        </div>
        
        <div>
            <label for="image" class="form-lable">Upload Image</label>
            <input name="listing[image]" type="file"  class="form-control" id="image"/>
        </div>

        <div>
            <label for="price" class="form-lable">Price</label>
            <input name="listing[price]" placeholder="enter price"  class="form-control" id="price"  required/>
            required
        </div>
        
        <div>
            <label for="location" class="form-lable">Location</label>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control" id="location" required/>
        </div>
        
        <div>
            <label for="country" class="form-lable">Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" id="country" required/>
        </div>
        
        <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div> 


